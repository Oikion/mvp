# ===========================================
# OIKION MVP - Environment Variables Example
# ===========================================
# Copy this file to .env.local and fill in your values

# ----- DATABASE (Neon PostgreSQL) -----
# Use a pooled connection string for serverless environments
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ----- CLERK AUTHENTICATION -----
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
CLERK_WEBHOOK_SECRET="whsec_..."
# Optional: Proxy URL for custom domain
# NEXT_PUBLIC_CLERK_PROXY_URL=""

# ----- APPLICATION -----
NEXT_PUBLIC_APP_NAME="Oikion"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_V="0.0.3-beta"

# ----- PLATFORM ADMIN -----
# Comma-separated list of admin emails (checked in production)
PLATFORM_ADMIN_EMAILS="admin@example.com"
# Development-only admin emails (disabled in production)
PLATFORM_ADMIN_DEV_EMAILS="dev@example.com"

# ----- AUTH.JS (if using Auth.js alongside Clerk) -----
AUTH_SECRET=""
AUTH_URL="http://localhost:3000"

# ----- GOOGLE OAUTH -----
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# ----- STRIPE PAYMENTS -----
STRIPE_API_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PLAN_ID=""
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PLAN_ID=""
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PLAN_ID=""
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PLAN_ID=""

# ----- EMAIL (Resend) -----
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@yourdomain.com"
FEEDBACK_EMAIL="feedback@yourdomain.com"

# ----- DIGITAL OCEAN SPACES (File Storage) -----
DO_ENDPOINT="https://fra1.digitaloceanspaces.com"
DO_REGION="fra1"
DO_BUCKET="your-bucket"
DO_ACCESS_KEY_ID=""
DO_ACCESS_KEY_SECRET=""

# ----- OPENAI -----
# Server-side only - do not use NEXT_PUBLIC_ prefix
OPEN_AI_API_KEY=""
OPEN_AI_ORGANIZATION_ID=""

# ----- CAL.COM INTEGRATION (Legacy - Not Currently Used) -----
# Note: Calendar functionality is now handled internally
# These variables are kept for backwards compatibility
CALCOM_API_KEY=""
CALCOM_API_URL="https://api.cal.com/v1"
CALCOM_WEBHOOK_SECRET=""

# ----- GITHUB -----
# Used for repository stars feature (server-side only)
GITHUB_TOKEN=""
GITHUB_REPO_API="https://api.github.com/repos/YourOrg/YourRepo"

# ----- UPLOADTHING -----
UPLOADTHING_TOKEN=""

# ----- JWT -----
JWT_SECRET=""

# ----- ABLY (Real-time messaging) -----
ABLY_API_KEY=""

# ----- N8N INTEGRATION -----
N8N_BASE_URL="http://localhost:5678"
N8N_API_KEY=""
N8N_WEBHOOK_SECRET=""

# ----- XE.GR INTEGRATION -----
XE_GR_USERNAME=""
XE_GR_PASSWORD=""
XE_GR_BASE_URL="https://www.xe.gr"
XE_GR_AUTHTOKEN=""

# ----- VERCEL KV (Rate Limiting) -----
# Required for rate limiting functionality
KV_URL=""
KV_REST_API_URL=""
KV_REST_API_TOKEN=""
KV_REST_API_READ_ONLY_TOKEN=""

# ----- CRON JOBS -----
CRON_SECRET=""

# ----- EXTERNAL API CORS -----
# Comma-separated list of allowed origins for /api/v1/* routes
# Example: "https://app.example.com,https://n8n.example.com"
ALLOWED_API_ORIGINS=""
