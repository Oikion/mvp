{
  "name": "@oikion/scraper",
  "version": "1.0.0",
  "description": "Market intelligence scraper microservice for Oikion",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "scrape": "tsx src/cli.ts",
    "scrape:spitogatos": "tsx src/cli.ts --platform spitogatos",
    "scrape:xe": "tsx src/cli.ts --platform xe_gr",
    "scrape:tospitimou": "tsx src/cli.ts --platform tospitimou",
    "test": "vitest",
    "lint": "eslint src/"
  },
  "dependencies": {
    "bullmq": "^5.8.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fuse.js": "^7.0.0",
    "ioredis": "^5.4.1",
    "pg": "^8.12.0",
    "playwright": "^1.45.0",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.0",
    "string-similarity": "^4.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/pg": "^8.11.6",
    "@types/string-similarity": "^4.0.2",
    "tsx": "^4.15.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
